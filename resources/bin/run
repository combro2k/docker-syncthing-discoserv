#!/bin/bash

chown discosrv:discosrv /var/discosrv -R

if [ ! -f /var/discosrv/key.pem ] && [ ! -f /var/discosrv/cert.pem ]; then
	openssl req -nodes -new -x509 -keyout /var/discosrv/key.pem -out /var/discosrv/cert.pem -batch
fi

sudo -H -u discosrv /opt/discosrv/discosrv -key /var/discosrv/key.pem -cert /var/discosrv/cert.pem -listen 0.0.0.0:8443 -debug
